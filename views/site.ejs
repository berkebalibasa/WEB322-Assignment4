<%- include('partials/navbar', { page: '' }) %>
<h1><%= site.site %></h1>
<p>Below, you will find detailed information about the site: <%= site.site %></p>
<img src="<%= site.image %>" width="300">
<p><strong>Location:</strong> <%= site.location %></p>
<p><strong>Region:</strong> <%= site.region %></p>
<p><strong>Geolocation:</strong> <%= site.latitude %>, <%= site.longitude %></p>
<p><strong>Designated:</strong> <%= site.designated %></p>
<p><strong>Date:</strong> <%= site.date %> (<%= site.dateType %>)</p>

<p id="quote">Loading quote...</p>
<script>
  document.addEventListener("DOMContentLoaded", ()=>{
    fetch("https://api.quotable.io/random")
      .then(response => response.json())
      .then(data => {
        document.getElementById("quote").innerText = `${data.content} - ${data.author}`;
      })
      .catch(error => console.error("Error fetching quote:", error));
  });
</script>

<td>
  <a class="btn btn-sm btn-warning" href="/editSite/<%= site.siteId %>">Edit</a>
</td>


<a href="#" onclick="history.back(); return false;">Go Back</a>
